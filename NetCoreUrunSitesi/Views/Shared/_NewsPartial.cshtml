@model News

<div class="col-md-6">
    <div class="row g-0 overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <a href="/@Model.Name.ToLower().Replace(" ","-").Replace("ç","c").Replace("ı","i")/News/Detail/@Model.Id" class="stretched-link">
            <div class="col d-none d-lg-block">
                <img src="/Img/@Model.Image" alt="" class="img-fluid" />
            </div>
        </a>
    </div>
</div>  